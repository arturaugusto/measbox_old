<%= simple_form_for @laboratory, :html => { :role => 'form' } do |f| %>
	<div class="form-group">
	  <%= f.input :name, :label => "Laboratory name", input_html: { class: 'form-control' } %>
	</div>
	<div class="form-group">  
	  <%= f.input :subdomain, input_html: { class: 'form-control'} %>
	</div>
	<div class="form-group">
	  <%= recaptcha_tags ajax: true %>
	</div>
  <%= f.button :submit, :class => 'btn btn-lg btn-primary btn-block' %>
  <p>By signing up, you agree to the Terms of <%= link_to("Service and Privacy Policy.", "../privacypolicy.htm") %></p>
  <br><br>
<% end %>
