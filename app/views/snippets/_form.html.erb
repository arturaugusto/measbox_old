<%= simple_form_for(@snippet) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs snippet_feature">

  <div class="hidden_tags_input">
    <%= f.input :model_list, :label => "Associate with models", input_html: { value: @snippet.model_list.join(",") } %>
    <%= f.input :functionality_list, :label => "Procedure groups", input_html: { value: @snippet.functionality_list.join(",") } %>
  </div>

  <%= f.input :flavor, collection: [['Instrument',1], ['Procedure',2]], prompt: "Choose template type...", as: (if @snippet.flavor != nil then :hidden else :select end), input_html: { class: 'form-control' } %>
  <br>
  <%= f.input :validated, as: :boolean, boolean_style: :inline, label: false, input_html: { :data => {toggle: 'toggle', on: 'Validated', off: 'Unvalidated', onstyle: 'success'} } %>
  <%= f.input :value, as: :text, label: false, input_html: { value: @snippet.value.to_json } %>
  </div>
  <span class="ranges_template_feature"></span>
  <br>
  <div class="form-actions">
    <%= f.button :submit, action_name.humanize + " Template", :class => 'btn btn-primary' %>
  </div>
<% end %>
