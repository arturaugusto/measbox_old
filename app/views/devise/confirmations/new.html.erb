<h2>Resend confirmation instructions</h2>

<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :role => 'form' }) do |f| %>
  <%= f.error_notification %>
  <%#= f.full_error :confirmation_token %>

  <div class="form-group">
    <%= f.input :email, :required => true, :autofocus => true, input_html: { class: 'form-control' } %>
  </div>

  <%= f.button :submit, "Resend confirmation instructions", :class => 'btn btn-lg btn-primary btn-block' %>

<% end %>

<%= render "devise/shared/links" %>
