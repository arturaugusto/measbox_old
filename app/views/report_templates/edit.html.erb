<%- model_class = ReportTemplate -%>
<div class="page-header">
  <%= link_to report_templates_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>

  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
      report_template_path(@report_template), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
      :class => 'btn btn-danger' %>

  <h1>Editing <%= model_class.model_name.human %></h1>
</div>

<%= render 'form' %>
