<%= simple_form_for(@report_template) do |f| %>
  <%= f.error_notification %>

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">Table Wrap code</h4>
        </div>
        <div class="modal-body">

          <div class="control-group string optional table_wrap_code_open">
            <label class="string optional control-label" for="table_wrap_code_open">Open</label>
            <div class="controls">
              <input class="string optional form-control" id="table_wrap_code_open" name="report_template[name]" type="text" value="">
            </div>
          </div>

          <div class="control-group string optional table_wrap_code_close">
            <label class="string optional control-label" for="table_wrap_code_close">Close</label>
            <div class="controls">
              <input class="string optional form-control" id="table_wrap_code_close" name="report_template[name]" type="text" value="">
            </div>
          </div>        

          <div class="control-group string optional table_wrap_caption">
            <label class="string optional control-label" for="table_wrap_caption">Caption</label>
            <div class="controls">
              <input class="string optional form-control" id="table_wrap_caption" name="report_template[name]" type="text" value="">
            </div>
          </div>        

          <br>
          <button type="button" class="btn btn-primary code_wrap_done" data-dismiss="modal">Done</button>

          <br>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>


  <div class="form-inputs">
    <%= f.input :name, input_html: { class: 'form-control' } %>
  </div>
  <br>
  <%= f.input :pdf_options, as: :hidden %>
  <div class="pdf_options_holder"></div>
  <br>
  <hr>
  <div class="form-inputs">
    <%= f.input :value, :label => false, input_html: { class: 'form-control report_template_editor_feature' } %>
  </div>  
  <br>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>
