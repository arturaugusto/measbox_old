<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), :html => { method: :post, :role => 'form' }) do |f| %>
  <%= f.input :email, autofocus: true, input_html: { class: 'form-control' } %><br>
	<div class="form-group">
	  <%= recaptcha_tags ajax: true %>
	</div>

  <%= f.button :submit, 'Send reset instructions', :class => 'btn btn-lg btn-primary btn-block' %>
<% end %>

<%= render "devise/shared/links" %>